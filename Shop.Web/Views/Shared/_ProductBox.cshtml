@model Shop.Domain.ViewModels.Site.Products.ProductItemViewModel

<div class="product product-2">
    <figure class="product-media">
        <a asp-area="" asp-controller="Product" asp-action="ProductDetail" asp-route-productId="@Model.ProductId">
            <img src="@(PathExtentions.ProductOrgin +Model.ProductImageName)" alt="تصویر محصول" class="product-image">
        </a>

        <div class="product-action-vertical">
            <a asp-area="User" asp-controller="Account" asp-action="AddUserFavorite" asp-route-productId="@Model.ProductId" class="btn-product-icon btn-wishlist" title="افزودن به لیست علاقه مندی"></a>
        </div>

        <div class="product-action">
            <a asp-area="" asp-controller="Product" asp-action="BuyProduct" asp-route-productId="@Model.ProductId" class="btn-product btn-cart" title="افزودن به سبد خرید">
                <span>
                    افزودن
                    به
                    سبد خرید
                </span>
            </a>
        </div>
    </figure>

    <div class="product-body">
        <div class="product-cat">
            <a asp-area="" asp-controller="Product" asp-action="Products" asp-route-FilterByCategory="@Model.ProductCategory.UrlName">@Model.ProductCategory.Title</a>
        </div>
        <h3 class="product-title">
            <a asp-area="" asp-controller="Product" asp-action="ProductDetail" asp-route-productId="@Model.ProductId">
                @Model.ProductName
            </a>
        </h3>
        <div class="product-price">
            @Model.Price.ToString("#,0 تومان")
        </div>
        <div class="ratings-container">
            <div class="ratings">
                <div class="ratings-val" style="width: 80%;"></div>
            </div>
            <span class="ratings-text">@Model.CommentCount</span>
        </div>
    </div>
</div>