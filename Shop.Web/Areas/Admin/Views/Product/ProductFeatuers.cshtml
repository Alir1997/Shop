@model List<Shop.Domain.Models.ProductEntity.ProductFeature>
@{
    ViewData["Title"] = "ویژگی های محصول";
    int index = 1;
}
<div class="row mt-5">
    <div class="col-md-12">
        @if (Model != null && Model.Any())
        {
            <div class="card shadow-sm">
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">ویژگی</th>
                                <th scope="col">مقدار ویژگی</th>
                                <th scope="col">دستورات</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var productFeature in Model)
                            {
                                <tr>
                                    <th scope="row">@index</th>
                                    <td>
                                        <p>
                                            @productFeature.FeatureTitle
                                        </p>
                                    </td>
                                    <td>
                                        <p>
                                            @productFeature.FeatureValue
                                        </p>
                                    </td>
                                    <td>
                                        <a class="btn btn-danger btn-sm" asp-area="Admin" asp-controller="Product" asp-action="DeleteFeatuers" asp-route-FeatuerId="@productFeature.Id">حذف</a>
                                    </td>
                                </tr>
                                index++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        }
        else
        {
            <div class="alert alert-danger">
                <b>ایتمی وجود ندارد</b>
            </div>
        }

    </div>
</div>
